        <ComboBox  FontSize="20" Name="GraphDataY" HorizontalAlignment="Left" Height="40" Margin="243,14,0,0" VerticalAlignment="Top" Width="200"/>
        <ComboBox  FontSize="20" Name="GraphDataX" HorizontalAlignment="Left" Height="40" Margin="521,14,0,0" VerticalAlignment="Top" Width="200"/>
        <Label FontSize="20" Content="X" HorizontalAlignment="Left" Height="40" Margin="491,14,0,0" VerticalAlignment="Top" Width="25"/>
        <Label FontSize="20" Content="Y" HorizontalAlignment="Left" Height="40" Margin="213,14,0,0" VerticalAlignment="Top" Width="25"/>


    </Grid>
