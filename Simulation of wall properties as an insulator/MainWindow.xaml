        <ScottPlot:WpfPlot Name="WPF1" HorizontalAlignment="Left" Height="600" Margin="196,59,0,0" VerticalAlignment="Top" Width="850"/>
        <TextBox FontSize="14" Name ="DataTextBox" IsEnabled="False" HorizontalAlignment="Left" Height="60" Margin="50,618,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" BorderBrush="#00000000"/>
        <TextBox FontSize ="14" HorizontalAlignment="Left" Height="50" Margin="1051,0,0,0" TextWrapping="Wrap" Text="Liczba punktów - N" VerticalAlignment="Center" Width="100" FontWeight="Bold" BorderBrush="#00000000"/>
