                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox Name="D1"  FontSize ="20" HorizontalAlignment="Left" Height="30" Margin="1078,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>
        <TextBox Name="D2" FontSize ="20" HorizontalAlignment="Left" Height="30" Margin="1078,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>
